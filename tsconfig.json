{
  "compilerOptions": {
    "target": "ES2021",
    "module": "ESNext",
    "rootDir": "./src/",
    "outDir": "./dist/",
    "noEmitOnError": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "types": ["jest", "node", "@types/testing-library__jest-dom"]
  },
  "include": ["src", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
